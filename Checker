    <div class="search-box">
        <h1>GenLayer Tracker</h1>
        <input type="text" id="userInput" placeholder="Your Discord Username">
        <button class="btn-main" onclick="checkRank()">Check Level & Form</button>
        
        <div id="resultBox" class="result">
            <div id="statsContent">
                <div style="font-size: 1.1rem;">Rank: <span id="resRnk" style="color:white">--</span></div>
                <div style="font-size: 1.1rem;">Level: <span id="resLvl" style="color:var(--discord)">--</span></div>
                <div style="margin-top:10px;">Form: <span id="resRole" class="role-name">--</span></div>
            </div>
            <button class="btn-copy" onclick="copyToClipboard()">ðŸ“‹ Copy Stats for Discord</button>
        </div>
    </div>

    <table>
        <thead><tr><th>Rank</th><th>Username</th><th>Level</th></tr></thead>
        <tbody id="topList"></tbody>
    </table>

    <script>
        const SID = "1237055789441487021"; 
        let cachedPlayers = [];

        function getGenRole(lvl) {
            if (lvl >= 54) return "Singularity";
            if (lvl >= 36) return "Brain";
            if (lvl >= 18) return "Synapse";
            if (lvl >= 7) return "Neuron";
            if (lvl >= 1) return "Molecule";
            return "Newbie";
        }

        async function loadData() {
            try {
                const proxy = "https://api.allorigins.win/get?url=";
                const target = `https://mee6.xyz/api/plugins/levels/leaderboard/${SID}`;
                const res = await fetch(proxy + encodeURIComponent(target));
                const json = await res.json();
                const data = JSON.parse(json.contents);
                cachedPlayers = data.players;

                document.getElementById('topList').innerHTML = cachedPlayers.slice(0, 10).map((p, i) => `
                    <tr><td>#${i+1}</td><td>${p.username}</td><td>Lvl ${p.level}</td></tr>
                `).join('');
            } catch (e) { console.error("Load failed"); }
        }

        function checkRank() {
            const name = document.getElementById('userInput').value.toLowerCase().trim();
            const p = cachedPlayers.find(x => x.username.toLowerCase() === name);
            if(p) {
                document.getElementById('resRnk').innerText = "#" + (cachedPlayers.indexOf(p) + 1);
                document.getElementById('resLvl').innerText = p.level;
                document.getElementById('resRole').innerText = getGenRole(p.level);
                document.getElementById('resultBox').style.display = "block";
            } else {
                alert("User not found in top list!");
            }
        }

        function copyToClipboard() {
            const rnk = document.getElementById('resRnk').innerText;
            const lvl = document.getElementById('resLvl').innerText;
            const role = document.getElementById('resRole').innerText;
            const user = document.getElementById('userInput').value;
            const url = window.location.href;

            const text = `ðŸ§¬ **GenLayer Evolutionary Status**\nðŸ‘¤ User: ${user}\nðŸ† Rank: ${rnk} | ðŸŽ–ï¸ Level: ${lvl}\nâœ¨ Current Form: **${role}**\n\nCheck yours here: ${url}`;
            
            navigator.clipboard.writeText(text).then(() => {
                alert("Stats copied! Now paste them in Discord! ðŸš€");
            });
        }

        loadData();
    </script>
